@page
@{
    ViewData["Title"] = "";
}
<nav class="navbar navbar-light">
  <form id="frmSearch" class="form-inline">
    <a class="navbar-brand" href="#">Daily</a>
    <input type="hidden" name="investing_csv" id="investing_csv" value="" />
    <input type="hidden" name="investing_total" id="investing_total" value="" />
    <input type="hidden" name="investing_index" id="investing_index" value="" />
    <div id="investing_csv_log" style="font-size:50px;"></div>

    <input type="hidden" name="screener_csv" id="screener_csv" value="" />
    <input type="hidden" name="screener_total" id="screener_total" value="" />
    <input type="hidden" name="screener_index" id="screener_index" value="" />
    <div id="screener_csv_log" style="font-size:50px;"></div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="chkIsBookMarkCategory" name="IsBookMarkCategory" value="true" checked />
        <label class="form-check-label" for="inlineCheckbox1">BookMark Category</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="chkIsBookMark" name="IsBookMark" value="true" checked />
        <label class="form-check-label" for="inlineCheckbox1">BookMark</label>
    </div>
    <input class="form-control mr-sm-2" type="search" placeholder="From Date" name="FromDate">
    <input class="form-control mr-sm-2" type="search" placeholder="To Date" name="ToDate">
    <button type="button" class="btn btn-primary ml-5 mr-5" id="lnkAverage">
    <button type="button" class="btn btn-primary ml-2" id="lnkInvestingDownload">Investing.Com</button>
    <button type="button" class="btn btn-success ml-2" id="btnRefresh">Refresh</button>
    <button type="button" id="btnInvestingUpdateCSV" class="btn btn-danger btn-sm" style="display:none;">Investing CSV UPDATE</button>
    <button type="button" class="btn btn-danger ml-2" id="lnkScreenerDownload" style="display:none;">Screener.Com</button>
    <button type="button" id="btnScreenerUpdateCSV" class="btn btn-danger btn-sm" style="display:none;">Screener CSV UPDATE</button>
  </form>
</nav>
<div class="clearfix">&nbsp;</div>
<table class="table table-hover table-striped" id="tblDaily" style="width:200px;">
  <thead>
    <tr>
      <th>Date</th>
      <th class="text-right" sortname="his.percentage">Percentage</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
<div class="row">
    <div class="col">
        <div class="d-inline">
            Rows
        </div>
        <div class="d-inline">
            <select id="rows2" name="rows2" class="form-control d-inline form-control-sm" style="width:100px;">
            </select>
        </div>
    </div>
    <div class="col">
        <div class="d-inline">
            <span id="paging_status"></span>
        </div>
    </div>
    <div class="col">
        <div class="pull-right">
          <nav aria-label="Page navigation example">
              <ul class="manual-pagination pagination justify-content-end">
              </ul>
           </nav>
        </div>
    </div> 
</div>
@section scripts{
 <script src="~/js/Daily.js" asp-append-version="true"></script>
 <script type="text/html" id="grid-template">
    {{each(i,row) rows}}
    <tr>
        <td>${formatDate(Date)}</td>
        <td class="text-right">${formatNumber(Percentage)+'%'}</td>
    </tr>
    {{/each}}
</script>
}
