@page
@{
    ViewData["Title"] = "";
}
<nav class="navbar navbar-light">
  <form id="frmSearch" class="form-inline">
    <a class="navbar-brand" href="#">Monthly</a>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="chkIsBookMarkCategory" name="IsBookMarkCategory" value="true" checked />
        <label class="form-check-label" for="inlineCheckbox1">BookMark Category</label>
    </div>
    <input class="form-control mr-sm-2" type="search" placeholder="Date" name="FromDate">
    <button type="button" class="btn btn-primary ml-5 mr-5" id="lnkAverage">
  </form>
</nav>
<div class="clearfix">&nbsp;</div>
<table class="table table-hover table-striped" id="tblMonthly">
  <thead>
    <tr>
      <th>Company</th>
      <th>Symbol</th>
      <th class="text-right" sortname="his.percentage">Percentage</th>
      <th class="text-right" sortname="his.prevpercentage">6 Months Percentage</th>
      <th>Date</th>
      <th>Prev.Period</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
<div class="row">
    <div class="col">
        <div class="d-inline">
            Rows
        </div>
        <div class="d-inline">
            <select id="rows2" name="rows2" class="form-control d-inline form-control-sm" style="width:100px;">
            </select>
        </div>
    </div>
    <div class="col">
        <div class="d-inline">
            <span id="paging_status"></span>
        </div>
    </div>
    <div class="col">
        <div class="pull-right">
          <nav aria-label="Page navigation example">
              <ul class="manual-pagination pagination justify-content-end">
              </ul>
           </nav>
        </div>
    </div> 
</div>
@section scripts{
 <script src="~/js/Monthly.js" asp-append-version="true"></script>
 <script type="text/html" id="grid-template">
    {{each(i,row) rows}}
    <tr>
        <td>${CompanyName}</td>
        <td>${Symbol}</td>
        <td class="text-right">${formatNumber(Percentage)+'%'}</td>
        <td class="text-right">${formatNumber(PrevPercentage)+'%'}</td>
        <td>${formatDate(FromDate,'MMM YYYY')}</td>
        <td>${formatDate(PrevFromDate,'MMM YYYY')} - ${formatDate(PrevToDate,'MMM YYYY')}</td>
    </tr>
    {{/each}}
</script>
}
